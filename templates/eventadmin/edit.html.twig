{% extends 'baseBack.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}

    <h1>Edit Event</h1>
<section style="margin: 10px;">
  <form method="post" style="margin-top: 30px;">
    {{ form_row(form.nomEvent, {'attr': {'style': 'padding: 10px; border: none; border-radius: 5px; margin-bottom: 20px; width: 100%; background-color: #f2f2f2;'}}) }}
    {{ form_row(form.description, {'attr': {'style': 'padding: 10px; border: none; border-radius: 5px; margin-bottom: 20px; width: 100%; background-color: #f2f2f2;'}}) }}
    {{ form_row(form.date, {'attr': {'style': 'padding: 10px; border: none; border-radius: 5px; margin-bottom: 20px; width: 100%; background-color: #f2f2f2;'}}) }}
    {{ form_row(form.location, {'attr': {'style': 'padding: 10px; border: none; border-radius: 5px; margin-bottom: 20px; width: 100%; background-color: #f2f2f2;'}}) }}
    {{ form_row(form.type, {'attr': {'style': 'padding: 10px; border: none; border-radius: 5px; margin-bottom: 20px; width: 100%; background-color: #f2f2f2;'}}) }}

    {% if event.image %}
        <img src="{{ asset('uploads/events/' ~ event.image) }}" width="400" style="margin-bottom: 20px;"/>
    {% endif %}

    {{ form_row(form.image, {'attr': {'style': 'margin-bottom: 20px;'}}) }}
    
    <button type="submit" style="padding: 10px; border: none; border-radius: 5px; background-color: #1abc9c; color: white; cursor: pointer;">Save changes</button>
</form>
</section>
<a href="{{ path('app_event_admin') }}" style="display: block; margin-top: 20px; text-decoration: none; color: #1abc9c; font-weight: bold;">Back to Event List</a>
{% endblock %}