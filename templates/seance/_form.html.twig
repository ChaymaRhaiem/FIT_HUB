

{% block body %}
    <center>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                {{ form_widget(form.titreSeance, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
